<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MyContent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Perception System :  "
                    android:textColor="@color/itemList"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingRight="5dp"
                            android:text="Number Of Cars :  "
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="5dp"
                            android:text="2"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/car_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:paddingRight="5dp"
                        android:text="pedestrians : "
                        android:textSize="17dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:background="#38647b">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/pedestrians" />
                        <TextView
                            android:id="@+id/pedestrians"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:paddingLeft="5dp"
                            android:text="(^_^)  (^_^)  (^_^)  (^_^)  "
                            android:textSize="25dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Car Data :"
                    android:textColor="@color/itemList"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                         <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="#405384"
                            android:layout_margin="5dp">

                             <RelativeLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="100dp"
                                 android:layout_margin="5dp"
                                 android:background="@drawable/speed"></RelativeLayout>
                            <TextView
                                android:id="@+id/speed"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="2dp"
                                android:paddingLeft="5dp"
                                android:text="60 km/hour"
                                android:textSize="17dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"                            android:layout_height="wrap_content"
                            android:background="#405384"
                            android:layout_margin="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/current">
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/current"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="2dp"
                                android:paddingLeft="5dp"
                                android:text="1 amp"
                                android:textSize="17dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"                            android:layout_height="wrap_content"
                            android:background="#405384"
                            android:layout_margin="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/safety_belt">
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/seat"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="2dp"
                                android:paddingLeft="5dp"
                                android:text="Connected"
                                android:textSize="17dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"                        android:layout_height="wrap_content"
                           android:background="#405384"
                           android:layout_margin="5dp">
                           <RelativeLayout
                               android:id="@+id/left_ind"
                               android:layout_width="wrap_content"
                               android:layout_height="100dp"
                               android:layout_margin="5dp"
                               android:background="@drawable/left_black">
                           </RelativeLayout>
                       </LinearLayout>
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"                        android:layout_height="wrap_content"
                           android:background="#405384"
                           android:layout_margin="5dp">
                           <RelativeLayout
                               android:id="@+id/waiting"
                               android:layout_width="wrap_content"
                               android:layout_height="100dp"
                               android:layout_margin="5dp"
                               android:background="@drawable/not_waiting">
                           </RelativeLayout>
                       </LinearLayout>
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"                        android:layout_height="wrap_content"
                           android:background="#405384"
                           android:layout_margin="5dp">
                           <RelativeLayout
                               android:id="@+id/right_ind"
                               android:layout_width="wrap_content"
                               android:layout_height="100dp"
                               android:layout_margin="5dp"
                               android:background="@drawable/right_black">
                           </RelativeLayout>
                       </LinearLayout>
                       </LinearLayout>

                    <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:background="#405384"
                           android:layout_margin="5dp">
                           <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="100dp"
                               android:layout_margin="5dp"
                               android:background="@drawable/my_time">
                           </RelativeLayout>
                           <TextView
                               android:id="@+id/time"
                               android:textAlignment="center"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:padding="2dp"
                               android:paddingLeft="5dp"
                               android:text="1 hour"
                               android:textSize="17dp" />
                       </LinearLayout>
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"                        android:layout_height="wrap_content"
                           android:background="#405384"
                           android:layout_margin="5dp">
                           <RelativeLayout
                               android:id="@+id/raining"
                               android:layout_width="wrap_content"
                               android:layout_height="100dp"
                               android:layout_margin="5dp"
                               android:background="@drawable/raining">
                           </RelativeLayout>
                       </LinearLayout>
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_weight="1"                        android:layout_height="wrap_content"
                           android:background="#405384"
                           android:layout_margin="5dp">
                          <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="100dp"
                               android:layout_margin="5dp"
                               android:background="@drawable/battery">
                           </RelativeLayout>
                           <TextView
                               android:id="@+id/battery"
                               android:textAlignment="center"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:padding="2dp"
                               android:paddingLeft="5dp"
                               android:text="good"
                               android:textSize="17dp" />
                       </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Driver Status :"
                    android:textColor="@color/itemList"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="#405384"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:id="@+id/focus"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/focus"></RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"                            android:layout_height="wrap_content"
                        android:background="#405384"
                        android:layout_margin="5dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/pulse_rate">
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/pulse"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:paddingLeft="5dp"
                            android:text="75 / Mn"
                            android:textSize="17dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"                            android:layout_height="wrap_content"
                        android:background="#405384"
                        android:layout_margin="5dp">
                        <RelativeLayout
                            android:id="@+id/sleep"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/sleep">
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

    </ScrollView>
    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="we can not access to server !"
            android:textAlignment="center"
            android:textColor="#fff" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true" />
</RelativeLayout>